extends ../layout/layout

block js
    script(src="../js/ajaxAccount.js")

block var
    - page = "account";
    - countElems = 0;
    - photo;

block content
    div(class="container-account-user")
        div(class="content-account-user")
            div(class="welcome-text-account")
                div(class="welcome-account") Bienvenue #{session.user.login}
                div(class="text1-account")
                    | Afin d'avoir accès à toutes les fonctionnalités, merci de compléter ton profil !
            hr(class="hr-login")
            div(class="select-photo-profil-text-account") Upload et choisis une photo pour ton profil (5 max)
            div(class="photos-user-account", id="photos-user-account")
                if photosUsers
                    for photo in photosUsers
                        div(
                            class=((photo.photo_profil == 1) ? "div-photo-user star " : "div-photo-user")
                            id=photo.id
                            style='background-image: url("' + photo.src_photo + '")'
                            onclick="interactPhoto("+ photo.id +")"
                        )
                        if photo.photo_profil
                            img(
                                class="imgStar" id="imgStar"
                                src="/images/tools/star.png"
                            )
                        - countElems++;
                if photosUsers && countElems < 5 || !photosUsers
                    label(for="my-file")
                        img(class="input-file-trigger", src="/images/upload/upload-female.png")
                    div(class="upload-app", id="upload-app")
                        form(id="frmUploader", enctype="multipart/form-data", action="/account/Upload", method="post", accept="image/*")
                            input(type="file", id="my-file", name="photos-profil", accept="image/*", onchange="submitForm()")
                div(class="interact-photos" id="interact-photos")
                    button(class="button del" id="button-del-account") supprimer ?
                    button(class="button profil" id="button-profil-account") photo de profil ?
                div(class=( locals.error ? "error red" : "error"), id="error") #{error}
            form(class="formAccount", id="formAccount")
                hr(class="hr-login")
                div(class="emailRegisterText") Mon adresse Email
                    div: input(
                            class="emailRegisterInput" name="emailRegisterInput"
                            type="email"
                            autofocus=true
                            autocomplete="email"
                            value=locals.email
                        )
                div(class="loginRegisterText") Mon Login
                    div: input(
                            class="loginRegisterInput" name="loginRegisterInput"
                            minlength="3" maxlength="16"
                            value=locals.login
                        )
                div(class="lastNameRegisterText") Mon Nom
                    div: input(
                            class="lastNameRegisterInput" name="lastNameRegisterInput"
                            value=locals.name
                        )
                div(class="firstNameRegisterText") Mon Prénom
                    div: input(
                            class="firstNameRegisterInput" name="firstNameRegisterInput"
                            value=locals.firstName
                        )
                hr(class="hr-login")
                div(class="sex-user") tu es :
                    div(class="container-checkbox")
                        div(class="sex-user") un homme
                            input(class="input-sex-user-male checkbox-account", type="checkbox", name="input-sex-user1", value="1")
                        div(class="sex-user") une femme
                            input(class="input-sex-user-female checkbox-account", type="checkbox", name="input-sex-user2", value="2")
                div(class="orientation-user") tu recherches :
                    div(class="container-checkbox")
                        div(class="orientation-user") un homme
                            input(class="input-orientation-user checkbox-account", type="checkbox", name="input-orientation-user1", value="1")
                        div(class="orientation-user") une femme
                            input(class="input-orientation-user checkbox-account", type="checkbox", name="input-orientation-user2", value="2")
                        div(class="orientation-user") les deux
                            input(class="input-orientation-user checkbox-account", type="checkbox", name="input-orientation-user3", value="3")
                div(class="biographie-account") A propos de toi :
                    input(class="bio-account", type="text", name="bio-account")
                div(class="tags-account") Tags d'interets :
                    input(class="tags-input-account", type="text", name="tags-input-account")
                    div(class="button account") ajouter ce tag !



doctype 5
html(lang='fr')
    block var
    head
        title MATCHA
        //meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
        meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
        link(rel="icon" type="image/png" href="")
        link(rel="stylesheet" href= "../css/app.css")
        link(rel="stylesheet" href="../js/jquery-ui-1.12.1/jquery-ui-1.12.1/jquery-ui.css")
        block jsHeader
            script(src="http://localhost:35729/livereload.js?snipver=1")
            
    body(onload= (page === "account" || sousPage === "browse/profil" ? "initialize("+lat+","+lng+")" : ""))
        div(class="site-container")
            div(class="site-pusher")
                header(class="header")
                    a(href="#" class="header__icon" id="header__icon" onclick="showhide()")
                    a(class="header__logo" href="#") MATCHA
                    nav(class="menu")
                        if !noheader
                            a(href="../browse", "class"=(page == "browse" ? "is-active" : "")) Parcourir
                            a(href="../search", "class"=(page == "search" ? "is-active" : "")) Rechercher
                            a(href="../account", "class"=(page == "account" ? "is-active" : "")) Mon Compte
                                if (locals.photoFav)
                                    div(
                                        class="fav default-img-user" id="default-img-user"
                                        style='background-image: url("' + photoFav + '")'
                                        )
                                else
                                    div(
                                        class=("default-img-user") id="default-img-user"
                                        style='background-image: url("/images/upload/default-user.png")'
                                        )
                            a(href='#', class="is_active" id="notifs") 
                                div(
                                        class=("notif-img") id="imgNotifs"
                                        style=(nbNotif == 0 || !nbNotif) ? 'left: 15px ; background-image: url("/images/notifs/notification.png")' : 'background-image: url("/images/notifs/notification.png")'
                                        )
                                    div(class="round-nb" id="round-nb" style=(nbNotif == 0 || !nbNotif) ?"display:none" : "display:inline-flex")
                                        div(class="nb" id="nb") #{nbNotif}
                            a(href="../accueil", "class"=(page == "accueil" ? "is-active" : "")) Delog
                        else
                            a(href="../login", "class"=(page == "login" ? "is-active" : "")) se connecter
                            a(href="../logon", "class"=(page == "logon" ? "is-active" : "")) cr√©er un compte
                    div(class="developpe-notif" id="developpe-notif"
                        style="display='none'")
                div(class="post")
                    div(class="content" id="app")
                        block content
                        div(class="footer")
                            p(class="footer") &copy; 2017 - Made by Jmarsal
                div(class="site-cache" id="site-cache" onclick="showhide()")
        block jsFooter
            <script src="../js/jquery-3.2.1.min.js"></script>
            <script src="../js/jquery-ui-1.12.1/jquery-ui-1.12.1/jquery-ui.js"></script>
            <script src="../js/jquery.form.min.js"></script>
            <script src="../js/ajaxLayout.js"></script>
            if (page === 'search')
                <script src="../js/socket.io.js"></script>
                <script src="../js/socket-client.js"></script>

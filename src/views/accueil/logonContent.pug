extends ../layout/layout

block js
    script(src="../ajax/ajaxLogon.js")

block var
    - page = "logon";
    - noheader = true;

block content
    div(class="containerRegister")
        form(class="formRegister", method="post")
            div(class="loginRegisterText") Login
                input(class="loginRegisterInput", id="loginRegisterText", autofocus=true, mozactionhint="next", autocomplete="username", minlength="3", maxlength="16")
            div(class="lastNameRegisterText") Nom
                input(class="lastNameRegisterInput", id="lastNameRegisterText", mozactionhint="next", autocomplete="family-name")
            div(class="firstNameRegisterText") Prénom
                input(class="firstNameRegisterInput", id="firstNameRegisterInput", mozactionhint="next", autocomplete="given-name")
            div(class="emailRegisterText") Email
                input(class="emailRegisterInput", id="emailRegisterInput", type="email", mozactionhint="next", autocomplete="email")
            div(class="passwdRegisterText") Mot de Passe
                input(class="passwdRegisterInput", id="passwdRegisterInput", type="password", mozactionhint="next", autocomplete="new-password")
            div(class="submitRegister")
                div(class="button", type="submit") Créer mon compte

